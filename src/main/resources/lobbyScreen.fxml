<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">
   <center>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <Text fill="WHITE" layoutX="216.0" layoutY="97.0" strokeType="OUTSIDE" strokeWidth="0.0" text="JavaTiles">
               <font>
                  <Font name="System Bold" size="40.0" />
               </font>
            </Text>
            <Button fx:id="readyButton" layoutX="264.0" layoutY="187.0" mnemonicParsing="false" onAction="#readyPressed" text="Not Ready" />
            <Button id="leaveLobbyButton" layoutX="259.0" layoutY="227.0" mnemonicParsing="false" onAction="#leaveLobbyPressed" text="Leave Lobby" />
         </children>
      </AnchorPane>
   </center>
   <top>
      <Pane prefHeight="100.0" prefWidth="1000.0" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="playersLobbyVbox" prefHeight="333.0" prefWidth="201.0" />
            <Button fx:id="showPlayersButton" layoutY="333.0" mnemonicParsing="false" onAction="#showPlayersPressed" text="Show players in lobby" />
         </children></Pane>
   </left>
   <right>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="400.0" prefWidth="160.0">
               <children>
                  <TextArea fx:id="chatArea" editable="false" prefHeight="387.0" prefWidth="160.0" />
                  <TextField fx:id="chatInput" onAction="#chatInputPressed" />
               </children>
            </VBox>
         </children></Pane>
   </right>
   <bottom>
      <Pane prefHeight="100.0" prefWidth="1000.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
