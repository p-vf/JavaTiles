<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">
   <center>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <Text fill="WHITE" layoutX="216.0" layoutY="97.0" strokeType="OUTSIDE" strokeWidth="0.0" text="JavaTiles">
               <font>
                  <Font name="System Bold" size="40.0" />
               </font>
            </Text>
            <Button fx:id="readyButton" layoutX="264.0" layoutY="187.0" mnemonicParsing="false" onAction="#readyPressed" text="Not Ready" />
            <Button id="leaveLobbyButton" layoutX="259.0" layoutY="227.0" mnemonicParsing="false" onAction="#leaveLobbyPressed" text="Leave Lobby" />
            <Button id="showPlayersButton" layoutX="240.0" layoutY="268.0" mnemonicParsing="false" onAction="#showPlayersPressed" text="Show players in lobby" />
            <Button layoutX="244.0" layoutY="306.0" mnemonicParsing="false" onAction="#highscorePressed" text="Show Highscore-List" />
         </children>
      </AnchorPane>
   </center>
   <top>
      <Pane prefHeight="100.0" prefWidth="1000.0" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="playersLobbyVbox" layoutX="14.0" prefHeight="180.0" prefWidth="270.0" />
            <ScrollPane layoutX="14.0" layoutY="200.0" prefHeight="182.0" prefWidth="177.0">
               <content>
                  <VBox fx:id="highscoreVbox" prefHeight="180.0" prefWidth="270.0" />
               </content>
            </ScrollPane>
         </children></Pane>
   </left>
   <right>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="chatArea" editable="false" layoutY="-76.0" prefHeight="476.0" prefWidth="169.0" />
            <TextField fx:id="chatInput" layoutY="387.0" onAction="#chatInputPressed" prefHeight="25.0" prefWidth="170.0" />
         </children></Pane>
   </right>
   <bottom>
      <Pane prefHeight="100.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="broadcastButton" layoutX="800.0" layoutY="14.0" mnemonicParsing="false" onAction="#broadcastPressed" text="Broadcast-Off" />
            <TextField fx:id="changeNickname" layoutX="14.0" layoutY="14.0" onAction="#toChangeUsername" promptText="change nickname" />
            <Button fx:id="manualOpened" layoutX="903.0" layoutY="14.0" mnemonicParsing="false" text="How to play?" />
            <Label fx:id="nicknameLabel" layoutX="14.0" layoutY="-8.0" text="Label" />
            <Label fx:id="nicknameWarning" layoutX="14.0" layoutY="41.0" text="Label" />
         </children></Pane>
   </bottom>
</BorderPane>
